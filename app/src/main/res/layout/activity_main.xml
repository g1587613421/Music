<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    style="@style/QMUI.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/QMUIRadiusImageView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="181dp"
        android:src="@drawable/music_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_corner_radius="100dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.qmuiteam.qmui.widget.QMUISlider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/suiji"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:qmui_corner_radius="20dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/shangyishou"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView"
            app:qmui_corner_radius="25dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/bofang"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView2"
            app:qmui_corner_radius="25dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/xiayishou"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView3"
            app:qmui_corner_radius="25dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/xihuan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView4"
            app:qmui_corner_radius="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:text="盛夏的果实\n

作曲：Meyna Co\n

作词：UA\n

演唱：莫文蔚\n

也许放弃才能靠近你　\n

不再见你你才会把我记起\n

时间累积这盛夏的果实　\n

回忆里寂寞的香气\n

我要试着离开你不要再想你　\n

虽然这并不是我本意\n

你曾说过会永远爱我　\n

也许承诺不过因为没把握\n

别用沉默再去掩饰什么　\n

当结果是那么赤裸裸\n

以为你会说什么才会离开我　\n

你只是转过头不看我\n

不要刻意说你还爱我　\n

当看尽潮起潮落只要你记得我\n

你曾说过会永远爱我\n

也许承诺不过证明没把握\n

不用难过不用掩饰什么　\n

当结果是那么赤裸裸\n

其实不必说什么才能离开我　\n

起码那些经过属于我\n

也许放弃才能靠近你　\n

不再见你你才会把我记起\n

时间累积这盛夏的果实　\n

回忆里爱情的香气\n

我以为不露痕迹思念却满溢　\n

或许这代表了我的心\n

不要刻意说你还爱我　\n

当看尽潮起潮落只要你记得我\n

如果你会梦见我请你再抱紧我"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QMUIRadiusImageView5" />
</androidx.constraintlayout.widget.ConstraintLayout>