<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    style="@style/QMUI.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/QMUIRadiusImageView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="181dp"
        android:src="@drawable/music_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_corner_radius="100dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.qmuiteam.qmui.widget.QMUISlider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/suiji"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:qmui_corner_radius="20dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/shangyishou"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView"
            app:qmui_corner_radius="25dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/bofang"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView2"
            app:qmui_corner_radius="25dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/xiayishou"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView3"
            app:qmui_corner_radius="25dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/xihuan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView4"
            app:qmui_corner_radius="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.zzu.gaojinlei.music.View.LrcView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:scrollbars="vertical"
        lrc:currentTextColor="@android:color/holo_green_dark"
        lrc:normalTextColor="#5F5E5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QMUIRadiusImageView5" />
</androidx.constraintlayout.widget.ConstraintLayout>