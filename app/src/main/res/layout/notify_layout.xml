<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/not_songname"
        android:textSize="21dp"
        android:textColor="@color/qmui_btn_blue_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="10dp"
        android:text="歌曲名" />

    <TextView
        android:id="@+id/not_singer"
        android:textColor="@color/qmui_btn_blue_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="53dp"
        android:text="歌手"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/not_songname"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/not_pre"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shangyishou" />

        <ImageView
            android:id="@+id/not_bofang"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/bofang" />

        <ImageView
            android:id="@+id/not_next"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/xiayishou" />
    </LinearLayout>

    <TextView
        android:id="@+id/not_Lrc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="64dp"
        android:layout_toEndOf="@+id/not_singer"
        android:text="歌词暂时不支持" />

</RelativeLayout>