<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    style="@style/QMUI.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/minLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/QMUIRadiusImageView5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="181dp"
            android:src="@drawable/music_default_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_corner_radius="100dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.qmuiteam.qmui.widget.QMUISlider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/QMUIRadiusImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp"

                android:src="@drawable/suiji"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:qmui_corner_radius="20dp" />

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/QMUIRadiusImageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="8dp"

                android:src="@drawable/shangyishou"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView"
                app:qmui_corner_radius="25dp" />

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:onClick="startOrpause"
                android:id="@+id/control"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/bofang"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView2"
                app:qmui_corner_radius="25dp" />

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/QMUIRadiusImageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp"

                android:src="@drawable/xiayishou"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/control"
                app:qmui_corner_radius="25dp" />

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="8dp"

                android:src="@drawable/xihuan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/QMUIRadiusImageView4"
                app:qmui_corner_radius="20dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.zzu.gaojinlei.music.View.LrcView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/QMUIRadiusImageView5"
            lrc:currentTextColor="@android:color/holo_green_dark"
            lrc:normalTextColor="#5F5E5E" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:padding="5dp"
            android:text="歌词"
            app:layout_constraintEnd_toStartOf="@+id/QMUIRoundButton"
            app:layout_constraintHorizontal_bias="0.871"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/QMUIRoundButton"
            app:qmui_isRadiusAdjustBounds="true"
             />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/QMUIRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="256dp"
            android:layout_marginBottom="12dp"
            android:padding="5dp"
            android:text="音效on"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:qmui_isRadiusAdjustBounds="true"
            app:qmui_radius="5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>